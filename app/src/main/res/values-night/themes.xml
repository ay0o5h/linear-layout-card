<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Linearlayout" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_800</item>
        <item name="colorPrimaryVariant">@color/indigo_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/largeTitle</item>
    </style>
    <style name="NormalTextStyle">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallTitle</item>
    </style>
    <style name="SubTitleTextStyle">
        <item name="android:textColor">@color/indigo_800</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/smallTitle</item>
    </style>

</resources>